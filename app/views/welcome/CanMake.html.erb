  <style>
    /* 既存のスタイルを続けて記述 */

    body {
      font-family: Arial, sans-serif;
      background-color: #FF9D50;
      color: white;
      text-align: center;
      padding-top: 100px;
      margin: 0;
    }

    header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      background-color: #FF9D50;
      padding: 10px 20px;
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
    }

    h1 {
      font-size: 32px;
      margin: 0;
    }

    .button-container {
      display: flex;
      justify-content: center;
      margin-top: 30px;
    }

    .button {
      display: inline-block;
      padding: 12px 24px;
      font-size: 18px;
      background-color: #3cb371;
      color: white;
      text-decoration: none;
      border-radius: 4px;
      margin-right: 10px;
    }

    footer {
      position: fixed;
      bottom: 0;
      left: 0;
      width: 100%;
      background-color: #f0f0f0;
      padding: 10px;
      box-shadow: 0px -2px 4px rgba(0, 0, 0, 0.1);
    }

    ul {
      list-style: none;
      display: flex;
      justify-content: space-around;
      align-items: center;
      margin: 0;
      padding: 0;
    }

    li {
      margin: 0;
      padding: 0;
    }

    a {
      display: block;
      text-align: center;
      color: #333;
      text-decoration: none;
      font-size: 20px;
    }

    footer li:last-child {
      margin-right: 0;
    }

    a::before {
      font-size: 30px;
      display: block;
      margin-bottom: 5px;
    }

    .content {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      padding: 20px; /* パディングを追加 */
    }

    /* 新たに追加したスタイル */
    .card-list {
      list-style: none;
      padding: 0;
      display: flex;
      flex-wrap: wrap;
      justify-content: center; /* カードを中央寄せに */
    }

    .card {
      width: 90%; /* 画面幅に合わせて調整 */
      max-width: 300px; /* 最大幅を設定 */
      margin: 10px;
      border: 1px solid #ccc;
      border-radius: 5px;
      text-align: center;
      padding: 10px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .card img {
      max-width: 100%;
      height: auto;
    }

    .card p {
      margin: 10px 0;
    }

    .card a {
      text-decoration: none;
      color: #333;
    }
  </style>
